<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <IsPackable>true</IsPackable>
    <Description>Another amazing Prism Module</Description>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>pdbonly</DebugType>
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Prism.Forms" Version="7.2.0.1038-pre" />
    <PackageReference Include="Xamarin.Forms" Version="3.5.0.169047" />
    <PackageReference Include="Prism.Plugin.Logging.Abstractions" Version="1.4.0.316-pre" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Images\**" />
    <EmbeddedResource Include="Images\**" />
    <Compile Update="i18n\Resources.Designer.cs"
             DesignTime="True"
             AutoGen="True"
             DependentUpon="Resources.resx" />
    <EmbeddedResource Update="i18n\Resources.resx"
                      Generator="ResXFileCodeGenerator"
                      LastGenOutput="Resources.Designer.cs" />
  </ItemGroup>

</Project>
